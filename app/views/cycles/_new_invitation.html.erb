
  <%= form_with model: @invitation do |f| %>
    <%= f.label :email, "Share cycle with a new Customer" %>
    <%= f.input :email, "Email Addresses..." %>
    <%= f.label :message, "Want to include a message with the invite?" %>
    <%= f.text_field :message, "Please enter your message..." %>
    <%= f.label :text, "You are about to share with the individuals above:" %>
    <%= f.label :text, invitation.cycle %>
    <%= f.submit "Send Invitation", class: 'modal__submit-button' %>
  <% end %>
